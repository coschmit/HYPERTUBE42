<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../pages/header %>

    <div id="forget-bg"></div>
    <div class="overlay"></div>
<div class="flex-container login-page">


    <% if (typeof error !== 'undefined' && error && error !== 'none') { 
        %> <div style="z-index: 6;" class="alert mt-3 alert-danger w-50 ml-auto mr-auto alert-dismissible fade show" role="alert">
<%-error%>
<button type="button" class="close" data-dismiss="alert" aria-label="Close">
<span aria-hidden="true">&times;</span>
</button>
</div>
    <% } %>
    <% if (typeof success !== 'undefined' && success && success !== 'none') { 
        %> <div class="alert alert-success mt-3 w-50 ml-auto mr-auto alert-dismissible fade show" role="alert">
<%-success%>
<button type="button" class="close" data-dismiss="alert" aria-label="Close">
<span aria-hidden="true">&times;</span>
</button>
    <% } %>
    
        <section class="text-center form-login">
                <form class="form-signin" action="/forget_password" method="post">
                            <h4><%= __("Forget Password")%></h4>
                    <input type="email" class='form-control' name='email' placeholder="<%=__("Email")%>" required autofocus>
                    
                   
                    <button class="btn btn-lg btn-block" type="submit"><%= __("Forget Password")%></button>
                    <p class="txt-register mt-2 float-left"><a href="/login"><%= __("Sign In")%></a></p>
            
                   
                </form>
            </section>

</div>
   

    </body>
    <% include ../others/footer%>

    
</html>